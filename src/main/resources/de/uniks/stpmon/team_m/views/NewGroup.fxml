<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<HBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.NewGroupController">
   <VBox maxHeight="400" prefHeight="400.0" prefWidth="300.0" style="-fx-border-color: black;">
      <Pane prefHeight="60.0" prefWidth="300.0">
         <Text fx:id="selectGroupMembersText" layoutX="42.0" layoutY="39.0" strokeType="OUTSIDE" strokeWidth="0.0"
               text="Select Groupmembers">
            <font>
               <Font size="22.0"/>
            </font>
         </Text>
      </Pane>
      <ScrollPane prefHeight="275.0" prefWidth="300.0"
                  style="-fx-border-color: black; -fx-border-style: solid none none none;">
         <VBox fx:id="groupMembersVBox" prefHeight="271.0" prefWidth="294.0"/>
      </ScrollPane>
      <Pane prefHeight="63.0" prefWidth="298.0"
            style="-fx-border-color: black; -fx-border-style: solid none none none;">
         <Button fx:id="backToMessagesButton" layoutX="112.0" layoutY="15.0" mnemonicParsing="false"
                 prefHeight="34.0" prefWidth="75.0" text="Go back" onAction="#changeToMessages"/>
      </Pane>
   </VBox>
   <VBox maxHeight="400" prefHeight="400.0" prefWidth="300.0" style="-fx-border-color: black;">
      <Pane prefHeight="302.0" prefWidth="298.0">
         <TextField fx:id="searchFieldGroupMembers" layoutX="36.0" layoutY="34.0" prefHeight="25.0"
                    prefWidth="226.0" promptText="Search for Groupmembers" style="-fx-border-color: black;">
            <font>
               <Font size="13.0"/>
            </font>
         </TextField>
      </Pane>
      <Pane prefHeight="34.0" prefWidth="298.0"
            style="-fx-border-color: black; -fx-border-style: solid none solid none;">
         <TextField fx:id="groupNameInput" layoutX="14.0" layoutY="4.0" prefHeight="25.0" prefWidth="271.0"
                    promptText="New Group Name"/>
      </Pane>
      <Pane prefHeight="62.0" prefWidth="298.0">
         <Button id="createGroupButton" layoutX="99.0" layoutY="14.0" mnemonicParsing="false" prefHeight="34.0"
                 prefWidth="100.0" text="Create Group"/>
      </Pane>
   </VBox>
</HBox>
