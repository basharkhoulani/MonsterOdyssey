<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.team_m.controller.subController.ChangeLanguageController">
   <Label fx:id="changeLanguageLabel" alignment="CENTER" prefHeight="35.0" prefWidth="268.0" text="%CHOOSE.LANGUAGE"
          textAlignment="CENTER">
      <font>
         <Font name="Comic Sans MS" size="24.0"/>
      </font>
      <VBox.margin>
         <Insets bottom="40.0" left="160.0" top="65.0"/>
      </VBox.margin>
   </Label>
   <RadioButton fx:id="radioButtonLanguageEnglish" mnemonicParsing="false" text="English">
      <font>
         <Font name="Comic Sans MS" size="17.0"/>
      </font>
      <VBox.margin>
         <Insets left="245.0"/>
      </VBox.margin>
   </RadioButton>
   <RadioButton fx:id="radioButtonLanguageGerman" mnemonicParsing="false" text="Deutsch">
      <font>
         <Font name="Comic Sans MS" size="17.0"/>
      </font>
      <VBox.margin>
         <Insets left="245.0" top="20.0"/>
      </VBox.margin>
   </RadioButton>
   <RadioButton fx:id="radioButtonLanguageChinese" mnemonicParsing="false" text="简体中文">
      <font>
         <Font name="Comic Sans MS" size="17.0"/>
      </font>
      <VBox.margin>
         <Insets left="245.0" top="20.0"/>
      </VBox.margin>
   </RadioButton>
   <Button fx:id="applyLanguageButton" maxHeight="50.0" minHeight="40.0" minWidth="140.0" mnemonicParsing="false"
           onAction="#applyLanguage" prefHeight="50.0" style="-fx-background-color: #FFF2CC;" styleClass="buttonsYellow"
           text="%APPLY">
      <font>
         <Font name="Comic Sans MS Bold" size="17.0"/>
      </font>
      <VBox.margin>
         <Insets left="220.0" top="40.0"/>
      </VBox.margin>
   </Button>
</VBox>
