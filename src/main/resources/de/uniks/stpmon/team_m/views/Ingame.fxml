<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="ingameVBox" alignment="CENTER_LEFT" cacheShape="false" centerShape="false" scaleShape="false" xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.IngameController">
   <StackPane cacheShape="false" centerShape="false" scaleShape="false" style="-fx-background-color: black;" stylesheets="@../styles.css" VBox.vgrow="ALWAYS">
      <Canvas fx:id="canvas" height="200.0" width="200.0" onMouseClicked="#canvasClicked"/>
      <HBox alignment="TOP_RIGHT" fillHeight="false" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0" prefHeight="40.0" prefWidth="40.0" StackPane.alignment="TOP_RIGHT">
         <Button fx:id="helpSymbol" mnemonicParsing="false" onAction="#showHelp" prefHeight="31.0" prefWidth="37.0" styleClass="helpSymbol" />
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" fillHeight="false" maxHeight="50.0" maxWidth="270.0" minHeight="50.0" minWidth="270.0" prefHeight="50.0" prefWidth="270.0" spacing="5.0" StackPane.alignment="BOTTOM_RIGHT">
         <StackPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </StackPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <Button fx:id="monstersButton" maxHeight="40.0" maxWidth="125.0" minHeight="40.0" minWidth="125.0" mnemonicParsing="false" text="%Monsters">
            <font>
               <Font name="Comic Sans MS Bold" size="17.0" />
            </font>
            <styleClass>
               <String fx:value="buttonsYellow" />
               <String fx:value="monstersButton" />
            </styleClass>
            <padding>
               <Insets left="24.0" />
            </padding>
         </Button>
         <Button fx:id="settingsButton" maxHeight="40.0" maxWidth="125.0" minHeight="40.0" minWidth="125.0" mnemonicParsing="false" onAction="#showTrainerSettings" text="%Settings">
            <font>
               <Font name="Comic Sans MS Bold" size="17.0" />
            </font>
            <styleClass>
               <String fx:value="buttonsYellow" />
               <String fx:value="settingsButton" />
            </styleClass>
            <padding>
               <Insets left="24.0" />
            </padding>
         </Button>
      </HBox>
      <HBox alignment="BOTTOM_LEFT" fillHeight="false" maxHeight="50.0" maxWidth="270.0" minHeight="50.0"
            minWidth="270.0" prefHeight="50.0" prefWidth="270.0" StackPane.alignment="BOTTOM_LEFT">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </padding>
         <StackPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
         </StackPane.margin>
         <TextField fx:id="messageField" maxHeight="40.0" maxWidth="400.0" minHeight="40.0" minWidth="400.0"
                    promptText="Send a message">
            <font>
               <Font name="Comic Sans MS" size="14.0"/>
            </font>
         </TextField>
         <Button fx:id="showChatButton" maxHeight="40.0" maxWidth="40.0" minHeight="40.0" minWidth="40.0"
                 mnemonicParsing="false">
            <font>
               <Font name="Comic Sans MS Bold" size="17.0"/>
            </font>
            <styleClass>
               <String fx:value="buttonsWhite" />
               <String fx:value="triangle" />
            </styleClass>
         </Button>
         <Button fx:id="sendMessageButton" maxHeight="40.0" maxWidth="125.0" minHeight="40.0" minWidth="125.0"
                 mnemonicParsing="false" onAction="#sendMessage" styleClass="buttonsYellow" text="%Send">
            <font>
               <Font name="Comic Sans MS Bold" size="17.0"/>
            </font>
            <HBox.margin>
               <Insets left="10.0"/>
            </HBox.margin>
         </Button>
      </HBox>
   </StackPane>
</VBox>
