<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane minHeight="540.0" minWidth="700.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.GroupController">
   <center>
          <VBox alignment="CENTER" fillWidth="false" prefHeight="399.0" prefWidth="402.0" BorderPane.alignment="CENTER">
              <VBox alignment="CENTER" fillWidth="false" prefHeight="75.0" prefWidth="588.0" VBox.vgrow="NEVER">
                  <TextField fx:id="searchFieldGroupMembers" onAction="#searchForGroupMembers" onMouseClicked="#searchForGroupMembers" prefHeight="27.0" prefWidth="299.0" promptText="Search for Groupmembers" VBox.vgrow="NEVER">
                      <font>
                          <Font size="13.0" />
                      </font>
                      <VBox.margin>
                          <Insets />
                      </VBox.margin>
                  </TextField>
              </VBox>
              <HBox>
                  <VBox alignment="CENTER" minHeight="100.0" prefHeight="448.0" prefWidth="523.0"/>
              </HBox>
              <VBox alignment="BOTTOM_CENTER" fillWidth="false" prefHeight="119.0" prefWidth="513.0" VBox.vgrow="NEVER">
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
                  <VBox alignment="CENTER" prefHeight="17.0" prefWidth="126.0" VBox.vgrow="NEVER">
                      <VBox.margin>
                          <Insets/>
                      </VBox.margin>
                      <Label fx:id="errorMessage" textFill="RED"/>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="47.0" prefWidth="300.0" VBox.vgrow="NEVER">
                      <TextField fx:id="groupNameInput" prefHeight="25.0" prefWidth="300.0"
                                 promptText="New Group Name"/>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="63.0" prefWidth="100.0">
                      <Button fx:id="saveGroupButton" mnemonicParsing="false" onAction="#saveGroup" prefHeight="35.0"
                              prefWidth="100.0" text="Save Group"/>
                  </VBox>
              </VBox>
          </VBox>
   </center>
   <left>
          <VBox alignment="CENTER_LEFT" fillWidth="false" prefHeight="600.0" prefWidth="277.0" BorderPane.alignment="CENTER_LEFT">
              <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="30.0" prefWidth="284.0" VBox.vgrow="NEVER">
                  <Text fx:id="selectGroupMembersText" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Groupmembers" wrappingWidth="220.509765625" VBox.vgrow="NEVER">
                      <font>
                          <Font size="22.0" />
                      </font>
                  </Text>
              </VBox>
              <HBox alignment="CENTER" prefHeight="322.0" prefWidth="277.0">
                  <VBox fx:id="groupMembersVBox" alignment="CENTER" minHeight="150.0" prefHeight="150.0"
                        prefWidth="331.0" HBox.hgrow="ALWAYS"/>
              </HBox>
              <VBox alignment="CENTER" fillWidth="false" VBox.vgrow="NEVER">
                  <HBox alignment="CENTER" fillHeight="false" prefHeight="75.0" prefWidth="320.0" VBox.vgrow="NEVER">
                      <HBox alignment="CENTER" prefHeight="35.0" prefWidth="117.0" HBox.hgrow="NEVER">
                          <Button fx:id="backToMessagesButton" mnemonicParsing="false" onAction="#changeToMessages"
                                  prefHeight="35.0" prefWidth="100.0" text="Go back"/>
                      </HBox>
                      <HBox alignment="CENTER" prefHeight="35.0" prefWidth="116.0" HBox.hgrow="NEVER">
                          <Button fx:id="deleteGroupButton" mnemonicParsing="false" onAction="#deleteGroup"
                                  prefHeight="35.0" prefWidth="100.0" text="Delete group"/>
                      </HBox>
                  </HBox>
              </VBox>
          </VBox>
   </left>
</BorderPane>
