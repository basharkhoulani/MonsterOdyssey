<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="401.0" prefWidth="649.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.GroupController">
    <center>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <VBox HBox.hgrow="ALWAYS">
                    <VBox alignment="CENTER" prefHeight="49.0" prefWidth="393.0" VBox.vgrow="ALWAYS">
                        <Text fx:id="selectGroupMembersText" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Groupmembers" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Text>
                    </VBox>
                    <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="276.0" prefWidth="393.0" VBox.vgrow="ALWAYS">
                        <VBox fx:id="groupMembersVBox" />
                    </ScrollPane>
                    <VBox alignment="CENTER" prefHeight="71.0" prefWidth="393.0" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
                            <Button fx:id="backToMessagesButton" mnemonicParsing="false" onAction="#changeToMessages" prefHeight="46.0" prefWidth="120.0" text="Go back" HBox.hgrow="ALWAYS" />
                            <Button fx:id="deleteGroupButton" mnemonicParsing="false" onAction="#deleteGroup" prefHeight="45.0" prefWidth="120.0" text="Delete group" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
                </VBox>
                <VBox prefHeight="399.0" prefWidth="402.0" HBox.hgrow="ALWAYS">
                    <VBox alignment="TOP_CENTER" prefHeight="304.0" prefWidth="402.0" VBox.vgrow="ALWAYS">
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                        <padding>
                            <Insets top="23.0" />
                        </padding>
                        <TextField fx:id="searchFieldGroupMembers" onAction="#searchForGroupMembers" onMouseClicked="#searchForGroupMembers" prefWidth="300.0" promptText="Search for Groupmembers" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="13.0" />
                            </font>
                        </TextField>
                    </VBox>
                    <VBox alignment="BOTTOM_CENTER" prefHeight="28.0" prefWidth="402.0" VBox.vgrow="ALWAYS">
                        <TextField fx:id="groupNameInput" prefHeight="41.0" prefWidth="402.0" promptText="New Group Name" VBox.vgrow="ALWAYS" />
                    </VBox>
                    <HBox alignment="CENTER" prefHeight="81.0" prefWidth="402.0" VBox.vgrow="ALWAYS">
                        <Button fx:id="saveGroupButton" mnemonicParsing="false" onAction="#saveGroup" prefHeight="45.0" prefWidth="120.0" text="Save Group" />
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
