<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.GroupController">
   <left>
       <VBox style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <VBox alignment="CENTER" prefHeight="55.0" prefWidth="300.0" style="-fx-border-color: black;">
            <children>
                  <Text fx:id="selectGroupMembersText" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Groupmembers">
                      <font>
                          <Font size="22.0" />
                      </font>
                  </Text>
            </children>
         </VBox>
           <ScrollPane prefHeight="275.0" prefWidth="300.0" style="-fx-border-color: black; -fx-border-style: solid none none none;">
               <VBox fx:id="groupMembersVBox" prefHeight="271.0" prefWidth="294.0" />
           </ScrollPane>
         <VBox prefHeight="68.0" prefWidth="300.0" style="-fx-border-color: black;">
            <children>
               <HBox alignment="CENTER" prefHeight="98.0" prefWidth="298.0" spacing="5.0">
                  <children>
                        <Button fx:id="backToMessagesButton" mnemonicParsing="false" onAction="#changeToMessages" prefHeight="34.0" prefWidth="125.0" text="Go back" />
                        <Button fx:id="deleteGroupButton" mnemonicParsing="false" onAction="#deleteGroup" prefHeight="34.0" prefWidth="125.0" text="Delete group" />
                  </children>
               </HBox>
            </children>
         </VBox>
       </VBox>
   </left>
   <right>
       <VBox style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <VBox alignment="TOP_CENTER" prefHeight="296.0" prefWidth="298.0" style="-fx-border-color: black;">
            <children>
                  <TextField fx:id="searchFieldGroupMembers" onAction="#searchForGroupMembers" prefHeight="25.0" prefWidth="226.0" promptText="Search for Groupmembers">
                      <font>
                          <Font size="13.0" />
                      </font>
                  </TextField>
            </children>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            <padding>
               <Insets top="26.0" />
            </padding>
         </VBox>
         <VBox alignment="CENTER" prefHeight="36.0" prefWidth="298.0" style="-fx-border-color: black;">
            <children>
                  <TextField fx:id="groupNameInput" prefHeight="25.0" prefWidth="285.0" promptText="New Group Name" />
            </children>
         </VBox>
         <HBox alignment="CENTER" prefHeight="66.0" prefWidth="298.0" style="-fx-border-color: black;">
            <children>
                  <Button fx:id="saveGroupButton" mnemonicParsing="false" onAction="#saveGroup" prefHeight="34.0" prefWidth="125.0" text="Save Group" />
            </children>
         </HBox>
       </VBox>
   </right>
</BorderPane>
