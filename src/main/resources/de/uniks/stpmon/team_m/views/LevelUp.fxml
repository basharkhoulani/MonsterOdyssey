<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="levelUpVBox" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.team_m.controller.subController.LevelUpController">
    <padding>
        <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
    </padding>
    <TextFlow fx:id="levelUpTextFlow" lineSpacing="4.0" prefHeight="100.0" prefWidth="560.0" textAlignment="CENTER"/>
    <VBox alignment="CENTER" prefHeight="220.0" prefWidth="550.0" spacing="10.0">
        <HBox alignment="CENTER" spacing="20.0">
            <ImageView fx:id="expImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="levelLabel" alignment="CENTER" prefHeight="32.0" prefWidth="200.0" text="Label"
                   textAlignment="CENTER" wrapText="true"/>
        </HBox>
        <HBox alignment="TOP_CENTER" spacing="20.0">
            <ImageView fx:id="hpImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="healthLabel" alignment="CENTER" prefHeight="32.0" prefWidth="200.0" text="Label"
                   textAlignment="CENTER" wrapText="true"/>
        </HBox>
        <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="65.0" spacing="20.0">
            <ImageView fx:id="atkImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="attackLabel" alignment="CENTER" prefHeight="32.0" prefWidth="200.0" text="Label"
                   textAlignment="CENTER" wrapText="true"/>
        </HBox>
        <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="94.0" spacing="20.0">
            <ImageView fx:id="defImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="defenseLabel" alignment="CENTER" prefHeight="32.0" prefWidth="200.0" text="Label"
                   textAlignment="CENTER" wrapText="true"/>
        </HBox>
        <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="136.0" spacing="20.0">
            <ImageView fx:id="spImageView" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true"/>
            <Label fx:id="speedLabel" alignment="CENTER" prefHeight="32.0" prefWidth="200.0" text="Label"
                   textAlignment="CENTER" wrapText="true"/>
        </HBox>
    </VBox>
    <VBox fx:id="abilityVBox" alignment="CENTER" spacing="10.0"/>
    <Button fx:id="okButton" mnemonicParsing="false" onAction="#okButtonPressed" prefHeight="32.0" prefWidth="95.0"
            styleClass="welcomeSceneButton" text="OK">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
</VBox>
