<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane minHeight="540.0" minWidth="700.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.MainMenuController">
   <left>
        <VBox alignment="CENTER_LEFT" fillWidth="false" prefHeight="605.0" prefWidth="315.0" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" fillWidth="false" prefHeight="18.0" prefWidth="315.0">
                <Label text="My Friends" VBox.vgrow="ALWAYS">
                    <font>
                        <Font name="System Bold" size="17.0" />
                    </font>
                </Label>
            </VBox>
         <VBox fx:id="friendsListVBox" alignment="CENTER" fillWidth="false" prefHeight="332.0" prefWidth="315.0" />
             <HBox alignment="CENTER" fillHeight="false" prefHeight="0.0" prefWidth="315.0" VBox.vgrow="NEVER">
                 <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#changeToLogin" prefHeight="25.0" prefWidth="92.0" text="Logout" HBox.hgrow="ALWAYS" />
             </HBox>
              <HBox alignment="CENTER" fillHeight="false" prefHeight="33.0" prefWidth="400.0" VBox.vgrow="NEVER">
                  <HBox alignment="CENTER" fillHeight="false" prefHeight="45.0" prefWidth="122.0" HBox.hgrow="ALWAYS">
                      <Button fx:id="findNewFriendsButton" mnemonicParsing="false" onAction="#changeToFindNewFriends"
                              prefHeight="25.0" prefWidth="125.0" text="Find New Friends" HBox.hgrow="ALWAYS"/>
                  </HBox>
                  <HBox alignment="CENTER" fillHeight="false" HBox.hgrow="ALWAYS">
                      <Button fx:id="messagesButton" mnemonicParsing="false" onAction="#changeToMessages"
                              prefHeight="25.0" prefWidth="111.0" text="Messages" HBox.hgrow="ALWAYS"/>
                  </HBox>
              </HBox>
        </VBox>
   </left>
   <center>
        <VBox alignment="CENTER" fillWidth="false" prefHeight="600.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" fillHeight="false" prefHeight="53.0" prefWidth="400.0" VBox.vgrow="NEVER">
                <HBox alignment="CENTER" fillHeight="false" prefHeight="53.0" prefWidth="449.0" HBox.hgrow="ALWAYS">
                    <Label text="Choose a Region">
                        <font>
                            <Font name="System Bold" size="20.0"/>
                        </font>
                    </Label>
                </HBox>
            </HBox>
               <VBox fx:id="regionRadioButtonList" alignment="CENTER" fillWidth="false" VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" fillWidth="false" prefHeight="158.0" prefWidth="400.0" VBox.vgrow="NEVER">
                <HBox alignment="CENTER" fillHeight="false" prefHeight="82.0" prefWidth="400.0">
                    <Button fx:id="startGameButton" mnemonicParsing="false" onAction="#changeToIngame"
                            text="Start Game"/>
                </HBox>
            </VBox>
        </VBox>
   </center>
   <top>
          <Button fx:id="settingsButton" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" mnemonicParsing="false" onAction="#changeToSettings" prefHeight="33.0" prefWidth="39.0" styleClass="settingsSymbol" stylesheets="@../styles.css" text="settings" textFill="TRANSPARENT" BorderPane.alignment="TOP_RIGHT" />
   </top>
</BorderPane>
