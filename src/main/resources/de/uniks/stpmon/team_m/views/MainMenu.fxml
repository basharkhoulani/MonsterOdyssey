            </VBox>
            <VBox alignment="CENTER" prefHeight="324.0" prefWidth="291.0" VBox.vgrow="NEVER">
                <HBox alignment="CENTER" prefHeight="396.0" prefWidth="291.0" VBox.vgrow="ALWAYS">
                    <VBox fx:id="friendsListVBox" alignment="CENTER" prefHeight="324.0" prefWidth="299.0" />
