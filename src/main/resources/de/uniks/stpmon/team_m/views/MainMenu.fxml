                    <HBox alignment="CENTER" fillHeight="false" HBox.hgrow="ALWAYS">
                        <Button fx:id="messagesButton" mnemonicParsing="false" onAction="#changeToMessages" prefHeight="25.0" prefWidth="91.0" text="Messages" HBox.hgrow="ALWAYS" />
