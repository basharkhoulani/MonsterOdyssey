<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.WelcomeSceneController">
    <Pane prefHeight="200.0" prefWidth="200.0" styleClass="worldMapBackground"/>
    <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
                prefWidth="800.0">
        <bottom>
            <AnchorPane prefHeight="131.0" prefWidth="800.0" BorderPane.alignment="CENTER">
                <Button fx:id="previousButton" layoutX="56.0" layoutY="14.0" mnemonicParsing="false"
                        styleClass="welcomeSceneButton" text="%PREVIOUS"/>
                <Button fx:id="nextButton" layoutX="657.0" layoutY="14.0" mnemonicParsing="false"
                        styleClass="welcomeSceneButton" text="%NEXT"/>
            </AnchorPane>
        </bottom>
        <center>
            <AnchorPane fx:id="messagePane" prefHeight="445.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets/>
                </BorderPane.margin>
                <padding>
                    <Insets right="6.0"/>
                </padding>
                <VBox fx:id="firstMessageBox" layoutY="163.0" prefHeight="45.0" prefWidth="205.0"
                      styleClass="welcomeMessage">
                    <Label fx:id="firstMessage" prefHeight="43.0" prefWidth="208.0" text="%WELCOME.TO.MONSTER.ODYSSEY!"
                           wrapText="true"/>
                </VBox>
                <VBox layoutX="202.0" layoutY="219.0" prefHeight="45.0" prefWidth="205.0" styleClass="welcomeMessage">
                    <Label fx:id="secondMessage" prefHeight="43.0" prefWidth="207.0" text="%WELCOME.ABOARD!"
                           wrapText="true"/>
                </VBox>
            </AnchorPane>
        </center>
        <left>
            <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <ImageView fitHeight="183.0" fitWidth="400.0" layoutX="9.0" layoutY="249.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@../images/Monster2-color.png"/>
                </ImageView>
            </AnchorPane>
        </left>
        <right>
            <AnchorPane prefHeight="469.0" prefWidth="203.0" BorderPane.alignment="CENTER">
                <ImageView fitHeight="200.0" fitWidth="175.0" layoutX="9.0" layoutY="249.0" pickOnBounds="true"
                           preserveRatio="true">
                    <Image url="@../images/Monster1-color.png"/>
                </ImageView>
            </AnchorPane>
        </right>
    </BorderPane>
</StackPane>
