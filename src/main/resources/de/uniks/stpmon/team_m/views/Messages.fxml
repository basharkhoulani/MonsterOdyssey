<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.layout.StackPane?>
<HBox fx:id="rootHBox" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.MessagesController" stylesheets="@../styles.css">
   <VBox fx:id="leftSideVBox" maxHeight="530" prefHeight="530.0" prefWidth="357.0" style="-fx-border-color: black; -fx-border-width: 2px; -fx-border-style: solid none solid solid;">
         <Pane fx:id="friendsAndGroupTextPane" prefHeight="43.0" prefWidth="338.0" minHeight="43.0" style="-fx-background-color: lightgray">
            <Text fx:id="friendsAndGroupText" layoutX="-2.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="My Friends &amp; My Groups" textAlignment="CENTER" wrappingWidth="341.13671875">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
         </Pane>
         <ScrollPane fx:id="friendsAndGroupsScrollPane" prefHeight="388.0" prefWidth="267.0">
            <VBox fx:id="friendsAndGroupsVBox" prefHeight="384.0" prefWidth="335.0" />
         </ScrollPane>
         <Pane fx:id="buttonPane" prefHeight="94.0" prefWidth="353.0" minHeight="94.0" style="-fx-background-color: lightgray">
            <Button fx:id="findNewFriendsButton" layoutX="114.0" layoutY="8.0" mnemonicParsing="false" onAction="#changeToFindNewFriends" prefHeight="33.0" prefWidth="125.0" text="Find New Friends">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button fx:id="newGroupButton" layoutX="224.0" layoutY="47.0" mnemonicParsing="false" onAction="#changeToNewGroup" prefHeight="33.0" prefWidth="101.0" text="New Group" />
            <Button fx:id="mainMenuButton" layoutX="26.0" layoutY="47.0" mnemonicParsing="false" onAction="#changeToMainMenu" prefHeight="33.0" prefWidth="101.0" text="Main Menu" />
         </Pane>
   </VBox>
   <VBox fx:id="rightSideVBox" maxHeight="530" prefHeight="530.0" prefWidth="398.0" style="-fx-border-color: black; -fx-border-width: 2px;">
         <Pane fx:id="chatPaneHeaderText" prefHeight="43.0" prefWidth="338.0" minHeight="43.0" style="-fx-background-color: lightgray">
            <Text fx:id="currentFriendOrGroupText" layoutX="46.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Friends/Group Chat" textAlignment="CENTER" wrappingWidth="258.13671875">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
            <Button fx:id="settingsButton" layoutX="332.0" layoutY="5.0" mnemonicParsing="false" onAction="#changeToSettings" prefHeight="33.0" prefWidth="35.0" styleClass="settingsSymbol" stylesheets="@../styles.css" />
         </Pane>
         <ScrollPane fx:id="chatScrollPane" prefHeight="423.0" prefWidth="396.0">
            <VBox fx:id="chatVBox" prefHeight="421.0" prefWidth="384.0" />
         </ScrollPane>
         <Pane fx:id="chatPaneInputArea" prefHeight="58.0" prefWidth="398.0" minHeight="58.0" style="-fx-background-color: lightgray">
            <TextArea fx:id="messageTextArea" layoutX="1.0" layoutY="2.0" prefHeight="51.0" prefWidth="305.0" promptText="Write your message here..." wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
            <Button fx:id="sendButton" layoutY="6.0" mnemonicParsing="false" prefHeight="43.0" prefWidth="75.0" text="Send" />
         </Pane>
   </VBox>
</HBox>
