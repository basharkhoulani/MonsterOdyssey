<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane minHeight="480.0" minWidth="640.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.MessagesController">
   <left>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <VBox alignment="CENTER" fillWidth="false" prefHeight="55.0" prefWidth="300.0">
                     <children>
                        <Label fx:id="friendsAndGroupText" text="My Friends &amp; My Groups" VBox.vgrow="ALWAYS">
                           <font>
                              <Font size="23.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox fx:id="friendsListViewVBox" alignment="CENTER" prefHeight="450.0" prefWidth="300.0" />
                  <VBox alignment="BOTTOM_CENTER" prefHeight="98.0" prefWidth="300.0">
                     <children>
                        <VBox prefHeight="100.0" prefWidth="300.0">
                           <children>
                              <HBox alignment="CENTER" fillHeight="false" prefHeight="65.0" prefWidth="300.0">
                                 <children>
                                    <Button fx:id="findNewFriendsButton" mnemonicParsing="false" onAction="#changeToFindNewFriends" text="Find New Friends" />
                                 </children>
                              </HBox>
                              <HBox fillHeight="false" prefHeight="65.0" prefWidth="300.0">
                                 <children>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="157.0" HBox.hgrow="SOMETIMES">
                                       <children>
                                          <Button fx:id="newGroupButton" mnemonicParsing="false" onAction="#changeToNewGroup" text="New Group" />
                                       </children>
                                    </HBox>
                                    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="143.0" HBox.hgrow="SOMETIMES">
                                       <children>
                                          <Button fx:id="mainMenuButton" mnemonicParsing="false" onAction="#changeToMainMenu" text="Main Menu" />
                                       </children>
                                    </HBox>
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" style="-fx-background-color: gray;" />
         </children>
      </HBox>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="59.0" prefWidth="494.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="40.0" prefWidth="494.0" VBox.vgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER" prefHeight="74.0" prefWidth="512.0">
                           <children>
                              <Text fx:id="currentFriendOrGroupText" strokeType="OUTSIDE" strokeWidth="0.0" text="Friends/Group Chat" textAlignment="CENTER" wrappingWidth="243.13671875">
                                 <font>
                                    <Font size="25.0" />
                                 </font>
                              </Text>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT" prefHeight="59.0" prefWidth="96.0">
                           <children>
                              <Button fx:id="settingsButton" mnemonicParsing="false" onAction="#changeToSettings" prefHeight="33.0" prefWidth="35.0" styleClass="settingsSymbol" stylesheets="@../styles.css" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="messagesListViewVBox" prefHeight="422.0" prefWidth="500.0" VBox.vgrow="ALWAYS" />
            <VBox prefHeight="64.0" prefWidth="494.0">
               <children>
                  <HBox alignment="CENTER" fillHeight="false" prefHeight="62.0" prefWidth="494.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="409.0">
                           <children>
                              <TextArea fx:id="messageTextArea" prefHeight="51.0" prefWidth="381.0" promptText="Write your message here..." wrapText="true">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                              </TextArea>
                           </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="130.0">
                           <children>
                              <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="48.0" prefWidth="97.0" text="Send" />
                           </children>
                        </HBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
