<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="receiveObjectRootVBox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="400.0"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.team_m.controller.subController.ReceiveObjectController">
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
   </padding>
   <Label fx:id="receivedObjectCongratulationLabel" text="\%CONGRATULATION">
      <font>
         <Font name="Comic Sans MS Bold" size="17.0"/>
      </font>
      <VBox.margin>
         <Insets bottom="8.0"/>
      </VBox.margin>
   </Label>
   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
      <Label fx:id="receiveObjectTextLabel">
         <font>
            <Font name="Comic Sans MS Bold" size="14.0"/>
         </font>
      </Label>
   </HBox>
   <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
      <ImageView fx:id="receivedObjectImageView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true"
                 preserveRatio="true">
         <HBox.margin>
            <Insets left="16.0"/>
         </HBox.margin>
      </ImageView>
      <VBox fx:id="receivedObjectLabelVBox" alignment="CENTER_LEFT" prefHeight="200.0" spacing="16.0"
            HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets left="16.0"/>
         </HBox.margin>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
         </padding>
         <Label fx:id="receivedObjectNewLabel" text="Neu!" textFill="#ec8535">
            <font>
               <Font name="Comic Sans MS Bold" size="24.0"/>
            </font>
            <VBox.margin>
               <Insets left="24.0"/>
            </VBox.margin>
         </Label>
         <Label fx:id="receivedObjectLevelLabel">
            <font>
               <Font name="Comic Sans MS" size="14.0"/>
            </font>
         </Label>
      </VBox>
   </HBox>
   <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
      <Button fx:id="receiveObjectOkButton" minWidth="150.0" mnemonicParsing="false" text="OK">
         <font>
            <Font name="Comic Sans MS Bold" size="17.0"/>
         </font>
      </Button>
   </VBox>
</VBox>
