<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<HBox fx:id="rootMessageHBox" maxWidth="260.0" onMouseEntered="#showEditAndDelete" onMouseExited="#hideEditAndDelete"
      prefWidth="261.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.team_m.controller.subController.MessageCell">
    <VBox alignment="CENTER" HBox.hgrow="ALWAYS">
        <VBox fx:id="messageVBox" maxWidth="250.0" VBox.vgrow="ALWAYS">
            <Label fx:id="messageContent" text="Label" wrapText="true" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </VBox.margin>
            </Label>
        </VBox>
        <VBox alignment="CENTER_LEFT" VBox.vgrow="NEVER">
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Label fx:id="senderTimeDate" text="Label" HBox.hgrow="ALWAYS"/>
                </HBox>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="editMessage" mnemonicParsing="false" onAction="#editMessage" text="✏" visible="false"
                            HBox.hgrow="NEVER"/>
                </HBox>
                <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                    <Button fx:id="deleteMessage" mnemonicParsing="false" onAction="#deleteMessage" text="🗑"
                            visible="false" HBox.hgrow="NEVER"/>
                </HBox>
            </HBox>
        </VBox>
    </VBox>
</HBox>