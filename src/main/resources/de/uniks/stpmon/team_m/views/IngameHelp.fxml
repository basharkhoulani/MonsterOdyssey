<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="100.0" prefWidth="350.0" style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.subController.IngameHelpController">
    <bottom>
        <VBox alignment="CENTER" prefHeight="33.0" prefWidth="138.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="backToGameButton" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#resumeGame" prefHeight="9.0" prefWidth="71.0" text="OK" />
            </children>
        </VBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Click 'p' on your keyboard for pause menu.">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
            </children>
        </VBox>
    </center>
</BorderPane>
