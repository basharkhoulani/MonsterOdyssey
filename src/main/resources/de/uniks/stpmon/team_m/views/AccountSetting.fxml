<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.uniks.stpmon.team_m.controller.AccountSettingController">
   <Label fx:id="titleLabel" alignment="CENTER" text="Change Account Information">
      <font>
         <Font size="42.0"/>
      </font>
   </Label>
   <Label fx:id="informationLabel" alignment="CENTER" prefHeight="17.0" prefWidth="490.0"/>
   <HBox alignment="CENTER" prefHeight="74.0" prefWidth="490.0">
      <TextField fx:id="usernameField" prefHeight="34.0" prefWidth="261.0" promptText="Current Username"/>
      <SplitPane prefHeight="74.0" prefWidth="88.0" visible="false"/>
      <SplitPane layoutX="277.0" layoutY="10.0" prefHeight="74.0" prefWidth="10.0" visible="false"/>
      <Button fx:id="usernameEditButton" mnemonicParsing="false" onAction="#editUsername" prefHeight="25.0"
              prefWidth="26.0" styleClass="editSymbol" stylesheets="@../styles.css"/>
      <Button fx:id="saveUsernameButton" mnemonicParsing="false" onAction="#saveUsername" prefHeight="34.0"
              prefWidth="123.0" text="Save Username"/>
   </HBox>
   <Label fx:id="usernameErrorLabel" alignment="CENTER" prefHeight="17.0" prefWidth="506.0" styleClass="errorLabel"
          stylesheets="@../styles.css"/>
   <HBox alignment="CENTER" prefHeight="74.0" prefWidth="311.0">
      <PasswordField fx:id="passwordField" prefHeight="34.0" prefWidth="257.0" promptText="New Password"/>
      <Button fx:id="showPasswordButton" mnemonicParsing="false" onAction="#showPassword" prefHeight="34.0"
              prefWidth="49.0" styleClass="hideSymbol" stylesheets="@../styles.css"/>
      <SplitPane prefHeight="74.0" prefWidth="28.0" visible="false"/>
      <SplitPane layoutX="233.0" layoutY="10.0" prefHeight="74.0" prefWidth="34.0" visible="false"/>
      <Button fx:id="passwordEditButton" alignment="CENTER" mnemonicParsing="false" onAction="#editPassword"
              styleClass="editSymbol" stylesheets="@../styles.css"/>
      <Button fx:id="savePasswordButton" mnemonicParsing="false" onAction="#savePassword" prefHeight="34.0"
              prefWidth="123.0" text="Save Password"/>
   </HBox>
   <Label fx:id="passwordErrorLabel" alignment="CENTER" prefHeight="17.0" prefWidth="509.0" styleClass="errorLabel"
          stylesheets="@../styles.css"/>
   <HBox alignment="CENTER" prefHeight="52.0" prefWidth="490.0">
      <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" prefHeight="34.0" prefWidth="123.0"
              text="Cancel"/>
      <SplitPane prefHeight="52.0" prefWidth="124.0" visible="false"/>
      <Button fx:id="deleteAccountButton" mnemonicParsing="false" onAction="#deleteAccount" prefHeight="34.0"
              prefWidth="123.0" text="Delete Account"/>
   </HBox>
</VBox>
