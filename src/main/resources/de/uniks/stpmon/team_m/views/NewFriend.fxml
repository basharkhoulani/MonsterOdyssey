<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.uniks.stpmon.team_m.controller.NewFriendController">
    <center>
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="800.0" BorderPane.alignment="CENTER">
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="100.0"/>
                </VBox.margin>
                <Button fx:id="addFriendButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#addAsAFriend" text="Add as a friend" textAlignment="CENTER">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Button>
                <TextField fx:id="searchTextField" onAction="#clickSearchField" onMouseClicked="#clickSearchField"
                           prefHeight="24.0" prefWidth="343.0">
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </TextField>
            </HBox>
            <HBox alignment="CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="50.0">
                <opaqueInsets>
                    <Insets/>
                </opaqueInsets>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <BorderPane prefHeight="50.0" BorderPane.alignment="CENTER">
            <left>
                <Button fx:id="mainMenuButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#changeToMainMenu"
                        text="Main Menu" textAlignment="CENTER" BorderPane.alignment="CENTER">
                    <opaqueInsets>
                        <Insets left="20.0"/>
                    </opaqueInsets>
                    <BorderPane.margin>
                        <Insets left="40.0"/>
                    </BorderPane.margin>
                </Button>
            </left>
            <right>
                <Button fx:id="messageButton" alignment="CENTER" mnemonicParsing="false" onAction="#sendMessage"
                        text="Send Message" textAlignment="CENTER" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets right="40.0"/>
                    </BorderPane.margin>
                </Button>
            </right>
        </BorderPane>
    </bottom>
</BorderPane>
