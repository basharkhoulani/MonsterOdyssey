<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uniks.stpmon.team_m.controller.NewFriendController">
   <center>
      <VBox alignment="CENTER" prefHeight="100.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="mainMenuButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#changeToMainMenu" text="Main Menu" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets left="20.0" />
                     </opaqueInsets>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="searchTextField" prefHeight="24.0" prefWidth="200.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets bottom="100.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <Button fx:id="addFriendButton" mnemonicParsing="false" onAction="#addAsAFriend" text="Add as a friend"
                       textAlignment="CENTER">
                  <HBox.margin>
                     <Insets right="30.0"/>
                  </HBox.margin>
               </Button>
               <Button fx:id="messageButton" alignment="CENTER" mnemonicParsing="false" onAction="#sendMessage"
                       text="Send Message" textAlignment="CENTER">
                  <HBox.margin>
                     <Insets left="30.0"/>
                  </HBox.margin>
               </Button>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
